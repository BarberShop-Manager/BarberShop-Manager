<div class="cadastro_cliente">
    <form action="/cliente/novo" method="POST">
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome">
        </div>
        <div>
            <label for="nome">Nome de usuário:</label>
            <input type="text" id="userName" name="userName" placeholder="Nome de usuário">
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="example@gmail.com">
        </div>
        <div>
            <label for="cpf">CPF:</label>
            <input type="number" id="cpf" name="cpf" placeholder="99999999999">
        </div>
        <div>
            <label for="dataNasc">Data de Nascimento:</label>
            <input type="date" id="dataNasc" name="dataNasc">
        </div>
        <div>
            <label for="tele">Telefone:</label>
            <input type="text" id="tele" name="tele" placeholder="(DDD) 9 9999-9999">
        </div>
        <div>
            <label for="senha">Senha:</label>
            <input type="password" id="senha" name="senha">
        </div>
        <div>
            <label for="senha2">Confimar Senha:</label>
            <input type="password" id="senha2" name="senha2"> <br>
        </div>
        <div>
            <input type="hidden" id="nivel" name="nivel" value="2"><br>
        </div>
        <div id="botao_cadastro">
            <button type="submit">Cadastrar</button>
        </div>
    </form>
</div> 