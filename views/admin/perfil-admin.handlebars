{{#each erros}}
<div>{{texto}}</div>
{{else}}

{{/each}}
<main>
    {{#each administrador}}
    <div class="perfil-admin">
        <div class="grupo-forms">
            <!-- FomulÃ¡rios com os dados atuais do cliente -->
            <form id="dados-atuais" action="/admin/perfil-admin/edit" method="post">
                <fieldset>
                    <legend>Perfil Admin:</legend>
                    <div>
                        <label for="nome">Nome:</label>
                        <input type="text" id="nome" name="nome" value="{{nome}}">
                    </div>
                    <div>
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" value="{{email}}">
                    </div>
                    <div>
                        <label for="senha">Senha:</label>
                        <input type="password" id="senha" name="senha" placeholder="Senha">
                    </div>
                    <div>
                        <label for="senha2">Senha:</label>
                        <input type="password" id="senha2" name="senha2" placeholder="Senha">
                    </div>
                </fieldset>
                <div id="alterar">
                    <button type="submit">Alterar</button>
                </div>
            </form>
        </div>
    </div>
    {{else}}
    {{/each}}
</main>