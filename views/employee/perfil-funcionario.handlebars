<main>
    <div class="perfil-cliente">
        <img src="assets/img/gustavo1.png">
        <div class="grupo-forms">
            <!-- Fomulários com os dados atuais do cliente -->
            {{#each clietes}}
                <form id="dados-atuais" action="">
                    <fieldset>
                        <legend>Perfil:</legend>
                        <div>
                            <label for="nome">Nome:</label>
                            <input type="text" id="nome" name="nome" value={{nome}} disabled>
                        </div>
                        <div>
                            <label for="apelido">Apelido:</label>
                            <input type="text" id="apelido" name="apelido" value={{userName}} disabled>
                        </div>
                        <div>
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" value={{email}} disabled>
                        </div>
                        <div>
                            <label for="senha">Senha:</label>
                            <input type="password" id="senha" name="senha" value="******" disabled>
                        </div>
                        <div>
                            <label for="aniversario">Aniversário:</label>
                            <input type="date" id="aniversario" name="aniversario" value={{daraNasc}} disabled>
                        </div>
                        <div>
                            <label for="cpf">CPF:</label>
                            <input type="number" id="cpf" name="cpf" value={{cpf}} disabled>
                        </div>
                        <div>
                            <label for="telefone">Telefone:</label>
                            <input type="number" id="telefone" name="telefone" value={{tele}} disabled>
                        </div>
                    </fieldset>
                    <div id="botao-alterar">
                        <button type="button"><a href="funcionario/perfil-funcionario/edit-perfil/{{_id}}">Alterar dados</a></button>
                    </div>
                </form>
            {{/each}}
        </div>
    </div>
</main>